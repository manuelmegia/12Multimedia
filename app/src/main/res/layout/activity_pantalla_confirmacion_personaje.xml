<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaConfirmacionPersonaje">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/textNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Introduce tu Nombre" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tuRazaFoto"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/jesucristoenano" />

            <ImageView
                android:id="@+id/tuClaseFoto"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/jesucristoladron__1_" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btCDeNuevo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comenzar de Nuevo" />

            <Button
                android:id="@+id/btCAventura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comenzar Aventura" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>